
<div class=parent>
 <div class="child">
   <h1><%= @room.name %></h1>
   <%  @room.roomimages.each do |roomimage| %>
      <% if roomimage.photo.attached? %>
         <%= link_to  room_roomimage_path(roomimage.room,roomimage) do %>
            <%= image_tag (roomimage.photo), style: "width: 200px; height:200px", class: "img" %>
         <% end %>
      <% end %>
   <% end %>
 </div>
 <div class="child">
   <h5><%= @room.name  %> Furniture </h5>
   <%  @room.furnitures.each do |furniture| %>
      <%= link_to furniture.name, room_furniture_path(furniture.room,furniture), class:"text-name" %><br>
   <% end %>
 
 </div>
</div>
 <% if current_user %>
  <h3> ADD ROOM IMAGE </h3>
  <%= render "roomimages/form", @roomimage %>
  <h3> ADD FURNITURE </h3>
  <%= render "furnitures/form", @furniture %>

  <%= link_to "Delete", room_path(@room), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?" }, class:"btn-custom1" %><br>
  <%= link_to "Edit" ,edit_room_path(@room),class:"btn-custom1" %><br>
 <% end %>
